<p id="notice"><%= notice %></p>

<div class="content">
  <!-- Actions and Totals -->
  <div class="columns">
    <div class="column">
      <div class="card">
        <div class="card-content is-flex is-flex-direction-row is-justify-content-space-between is-align-items-flex-start">
          <h1>Stats</h1>

          <div class="buttons has-addons">
            <%= link_to 'Edit', edit_qr_code_path(@qr_code), class: 'button is-warning' %>
            <%= link_to 'Back', qr_codes_path, class: 'button is-info' %>
          </div>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="card" style="height: 100%">
        <div class="card-content">
          <p class="title">Total: <%= @qr_code.visits.count %> visits</p>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Actions and Totals -->

  <!-- General info and top referrals -->
  <div class="columns">
    <div class="column">
      <div class="card">
        <div class="card-content">
          <h2 class="subtitle">Points to</h2>
          <p><%= link_to @qr_code.destination, @qr_code.destination, target: '_blank' %></p>
          <h3 class="subtitle">with link</h3>
          <p><%= link_to @qr_code.tracking_link, @qr_code.tracking_link, target: '_blank' %></p>
          <div class="popover is-popover-bottom is-not-popover-hover">
            <%= button_tag class: "button is-primary popover-trigger",
                           data: {
                            controller: "clipboard",
                            action: "click->clipboard#handleClick",
                            content: @qr_code.tracking_link
                          } do %>
              <span class="icon">
                <i class="fas fa-copy"></i>
              </span>
              <span>Copy</span>
            <% end %>
            <div class="popover-content">
              Copied!
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="card">
        <div class="card-content">
          <h3 class="subtitle">Top referrals</h3>
          <table class="table">
            <thead>
              <tr>
                <th>Referrer</th>
                <th>Visits</th>
              </tr>
            </thead>
            <tbody>
              <% @qr_code.visits.group(:referrer).count.sort_by { |_, count| -count }.first(5).each do |referrer, count| %>
                <tr>
                  <td><%= referrer || "N/A" %></td>
                  <td><%= count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- End of General info and top referrals -->

  <!-- Map -->
  <div class="card">
    <div class="card-content p-0">
      <%= content_tag :div, nil, id: "mapChart", data: { countries: @countries, controller: "map-chart" } %>
    </div>
  </div>
  <!-- End of Map -->

  <!-- Breakdowns by OS and Device -->
  <div class="columns mt-3">
    <div class="column">
      <div class="card">
        <div class="card-content">
          <h3>Breakdown by OS</h3>
          <%= pie_chart @os_data, donut: true %>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="card">
        <div class="card-content">
          <h3>Breakdown by device</h3>
          <%= pie_chart @device_data, donut: true %>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Breakdowns by OS and Device -->
</div>

