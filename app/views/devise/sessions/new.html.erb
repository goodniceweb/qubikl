<h2 class="title"><%= t('views.devise.sessions.log_in_title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <div class="field">
    <%= f.label :email, t('views.devise.shared.email'), class: "label" %>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, t('views.devise.shared.password'), class: "label" %>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="control">
        <label class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </label>
      </div>
    </div>
  <% end %>

  <div class="columns is-centered">
    <div class="column is-half">
      <div class="field">
        <div class="control">
          <%= f.submit t('views.devise.sessions.log_in'), class: "button is-primary is-fullwidth" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
