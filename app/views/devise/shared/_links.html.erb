<div class="columns is-centered">
  <div class="column is-half pt-0">
    <%- if controller_name != 'sessions' %>
      <%= link_to t('views.devise.shared.log_in'), new_session_path(resource_name), class: "button is-secondary is-fullwidth mt-3" %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t('views.devise.shared.sign_up'), new_registration_path(resource_name), class: "button is-secondary is-fullwidth mt-3" %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('views.devise.shared.forgot_password'), new_password_path(resource_name), class: "button is-secondary is-fullwidth mt-3" %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to t('views.devise.shared.no_confirmation_instructions'), new_confirmation_path(resource_name), class: "button is-secondary is-fullwidth mt-3" %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to t('views.devise.shared.no_unlock_instructions'), new_unlock_path(resource_name), class: "button is-secondary is-fullwidth mt-3" %>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to t('views.devise.shared.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "button is-secondary is-fullwidth mt-3" %>
      <% end %>
    <% end %>
  </div>
</div>