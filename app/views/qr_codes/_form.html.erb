<%= form_with(model: qr_code) do |form| %>
  <div class="field">
    <%= form.label :link, class: "label" %>
    <div class="control">
      <%= form.text_field :destination, class: "input" %>
    </div>
    <%= form.label :domain, class: "label mt-3" %>
    <div class="popover is-popover-bottom is-block">
      <button type="button" class="button is-info popover-trigger is-fullwidth">
        <span id="currentDomain" class="domain"><%= request.base_url %></span>
        <span class="icon">
          <i class="fas fa-caret-down"></i>
        </span>
      </button>
      <div class="popover-content">
        <div class="select is-multiple">
          <% opts = options_for_domain(:current_user)%>
          <%= form.select :domain,
                          opts,
                          {},
                          {
                            multiple: true,
                            size: opts.size,
                            data: {
                              action: 'change->domain-select#handleChange',
                              controller: 'domain-select'
                            }
                          } %>
          <%#= TODO: create new domain functionality (maybe in popup modal) %>
          <button type="button" class="mt-5 button is-small is-link">
            Add new domain
          </button>
        </div>
      </div>
    </div>
  </div>
  <% if qr_code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(qr_code.errors.count, "error") %> prohibited this qr_code from being saved:</h2>

      <ul>
        <% qr_code.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Create QR Code", class: "button is-primary" %>
  </div>
<% end %>
